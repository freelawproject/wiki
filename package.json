{
  "name": "wiki-tailwind",
  "version": "1.0.0",
  "description": "Tailwind CSS build for FLP Wiki",
  "scripts": {
    "start": "npm run dev",
    "build": "npm run build:clean && npm run build:tailwind",
    "build:clean": "rimraf wiki/assets/static-global/css/tailwind_styles.css",
    "build:tailwind": "cross-env NODE_ENV=production tailwindcss --config ./wiki/assets/tailwind/tailwind.config.js -i ./wiki/assets/tailwind/input.css -o ./wiki/assets/static-global/css/tailwind_styles.css --minify",
    "dev": "cross-env NODE_ENV=development tailwindcss --config ./wiki/assets/tailwind/tailwind.config.js -i ./wiki/assets/tailwind/input.css -o ./wiki/assets/static-global/css/tailwind_styles.css -w"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "rimraf": "^6.0.0",
    "tailwindcss": "^3.4.17"
  }
}
